---
import { Image } from "astro:assets";
import type { Photo } from "../data/photos";

interface Props {
    photos: Photo[];
    title?: string;
}

const { photos = [], title = "Photo Gallery" } = Astro.props;
const totalPhotos = photos.length;
---

<div class="photo-gallery">
    {title && <h2 class="gallery-title">{title}</h2>}

    <div class="gallery-grid" role="list">
        {
            photos.map((photo, index) => (
                <article
                    class="photo-item"
                    role="listitem"
                    tabindex="0"
                    data-photo-index={index}
                    aria-label={`View ${photo.alt}`}
                >
                    <div class="photo-wrapper">
                        <Image
                            src={photo.src}
                            alt={photo.alt}
                            width={800}
                            height={600}
                            loading="lazy"
                            decoding="async"
                        />
                    </div>
                    {photo.caption && (
                        <div class="photo-caption">{photo.caption}</div>
                    )}
                </article>
            ))
        }
    </div>

    {
        photos.length === 0 && (
            <div class="no-photos">
                <div class="placeholder">
                    <div class="placeholder-icon">ðŸ“·</div>
                    <h3>No photos yet</h3>
                    <p>Add photos to see the gallery!</p>
                </div>
            </div>
        )
    }

    <div class="photo-count" aria-live="polite">
        {totalPhotos}
        {totalPhotos === 1 ? "photo" : "photos"}
    </div>
</div>

<!-- Lightbox -->
<div
    class="lightbox"
    id="lightbox"
    role="dialog"
    aria-modal="true"
    aria-label="Photo viewer"
    hidden
>
    <div class="lightbox-backdrop"></div>
    <div class="lightbox-content">
        <button class="close-btn" aria-label="Close lightbox" type="button">
            <span class="sr-only">Close</span>
            <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>

        <div class="image-container">
            <img
                class="lightbox-image"
                id="lightbox-image"
                src={photos.length > 0 ? (typeof photos[0].src === 'string' ? photos[0].src : photos[0].src.src) : ""}
                alt={photos.length > 0 ? photos[0].alt : ""}
            />
        </div>

        <div class="lightbox-info">
            <p class="lightbox-caption" id="lightbox-caption"></p>
            <p class="lightbox-counter">
                <span id="current-index">1</span> / {totalPhotos}
            </p>
        </div>

        <button
            class="nav-btn prev-btn"
            aria-label="Previous photo"
            type="button"
            disabled
        >
            <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>

        <button
            class="nav-btn next-btn"
            aria-label="Next photo"
            type="button"
            disabled
        >
            <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
            >
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
        </button>
    </div>
</div>

<style>
    .photo-gallery {
        max-width: var(--container-xl);
        margin: var(--spacing-3xl) auto;
        padding: 0 var(--spacing-lg);
    }

    .gallery-title {
        text-align: center;
        font-size: var(--font-size-4xl);
        color: var(--color-primary);
        margin-bottom: var(--spacing-xl);
        font-weight: var(--font-weight-bold);
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: var(--spacing-lg);
        margin-bottom: var(--spacing-xl);
    }

    .photo-item {
        position: relative;
        border-radius: var(--radius-lg);
        overflow: hidden;
        background: var(--color-bg-alt);
        box-shadow: var(--shadow-sm);
        transition:
            transform var(--transition-base),
            box-shadow var(--transition-base);
        cursor: pointer;
    }

    .photo-item:hover {
        transform: translateY(calc(var(--spacing-sm) * -1));
        box-shadow: var(--shadow-lg);
    }

    .photo-item:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
    }

    .photo-wrapper {
        aspect-ratio: 4 / 3;
        overflow: hidden;
    }

    .photo-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform var(--transition-slow);
    }

    .photo-item:hover .photo-wrapper img {
        transform: scale(1.05);
    }

    .photo-caption {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.85));
        color: white;
        padding: var(--spacing-2xl) var(--spacing-md) var(--spacing-md);
        font-size: var(--font-size-sm);
        opacity: 0;
        transform: translateY(100%);
        transition:
            opacity var(--transition-base),
            transform var(--transition-base);
    }

    .photo-item:hover .photo-caption,
    .photo-item:focus-within .photo-caption {
        opacity: 1;
        transform: translateY(0);
    }

    .no-photos {
        text-align: center;
        padding: var(--spacing-4xl) var(--spacing-xl);
        background: var(--color-bg-alt);
        border-radius: var(--radius-xl);
        border: 2px dashed var(--color-border);
        margin-top: var(--spacing-xl);
    }

    .placeholder-icon {
        font-size: 4rem;
        margin-bottom: var(--spacing-md);
    }

    .placeholder h3 {
        color: var(--color-text);
        margin-bottom: var(--spacing-sm);
    }

    .placeholder p {
        color: var(--color-text-light);
    }

    .photo-count {
        text-align: center;
        color: var(--color-text-light);
        font-size: var(--font-size-sm);
        margin-top: var(--spacing-lg);
    }

    /* Lightbox Styles */
    .lightbox {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10000 !important;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--spacing-md);
    }

    .lightbox[hidden] {
        display: none !important;
    }

    .lightbox-backdrop {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(5px);
    }

    .lightbox-content {
        position: relative;
        max-width: 90vw;
        max-height: 90vh;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
    }

    .image-container {
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow-2xl);
    }

    .lightbox-image {
        display: block;
        max-width: 100%;
        max-height: 70vh;
        object-fit: contain;
        background: var(--color-bg);
    }

    .lightbox-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--spacing-lg);
        color: white;
    }

    .lightbox-caption {
        flex: 1;
        font-size: var(--font-size-lg);
        margin: 0;
        max-width: 600px;
    }

    .lightbox-counter {
        margin: 0;
        font-size: var(--font-size-sm);
        opacity: 0.8;
        white-space: nowrap;
    }

    .close-btn {
        position: absolute;
        top: -50px;
        right: 0;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: var(--radius-full);
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background var(--transition-base);
    }

    .close-btn:hover {
        background: rgba(255, 255, 255, 0.2);
    }

    .nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 48px;
        height: 48px;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: var(--radius-full);
        color: white;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background var(--transition-base);
    }

    .nav-btn:hover:not(:disabled) {
        background: rgba(255, 255, 255, 0.2);
    }

    .nav-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    .prev-btn {
        left: -70px;
    }

    .next-btn {
        right: -70px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .gallery-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: var(--spacing-md);
        }

        .gallery-title {
            font-size: var(--font-size-3xl);
        }

        .lightbox-content {
            max-width: 95vw;
        }

        .lightbox-image {
            max-height: 60vh;
        }

        .prev-btn,
        .next-btn {
            top: auto;
            bottom: -70px;
            transform: none;
        }

        .prev-btn {
            left: 50%;
            transform: translateX(calc(-100% - var(--spacing-sm)));
        }

        .next-btn {
            right: 50%;
            transform: translateX(calc(100% + var(--spacing-sm)));
        }

        .close-btn {
            top: -60px;
            right: 0;
        }

        .lightbox-info {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--spacing-sm);
        }
    }

    @media (max-width: 640px) {
        .photo-gallery {
            padding: 0 var(--spacing-md);
        }

        .gallery-grid {
            grid-template-columns: 1fr;
        }

        .lightbox-content {
            padding: var(--spacing-md);
        }

        .nav-btn {
            width: 40px;
            height: 40px;
        }
    }

    /* Extra optimization for micro-screens */
    @media (max-width: 320px) {
        .photo-gallery {
            padding: 0 var(--spacing-sm);
            margin: var(--spacing-xl) auto;
        }
        
        .gallery-grid {
            gap: var(--spacing-sm);
        }
    }
</style>

<script define:vars={{ photos }}>
    let currentPhotoIndex = 0;
    const totalPhotos = photos.length;

    // Elements
    const lightbox = document.getElementById("lightbox");
    const lightboxImage = document.getElementById("lightbox-image");
    const lightboxCaption = document.getElementById("lightbox-caption");
    const currentIndex = document.getElementById("current-index");

    function openLightbox(index) {
        if (totalPhotos === 0 || !lightbox) return;

        currentPhotoIndex = index;
        updateLightbox();

        lightbox.removeAttribute("hidden");
        document.body.style.overflow = "hidden";

        // Focus on close button for accessibility
        setTimeout(() => {
            const closeBtn = lightbox.querySelector(".close-btn");
            if (closeBtn) {
                closeBtn.focus();
            }
        }, 10);
    }

    function closeLightbox() {
        if (lightbox) {
            lightbox.setAttribute("hidden", "");
            document.body.style.overflow = "";
        }
    }

    function nextPhoto() {
        if (currentPhotoIndex < totalPhotos - 1) {
            currentPhotoIndex++;
            updateLightbox();
        }
    }

    function previousPhoto() {
        if (currentPhotoIndex > 0) {
            currentPhotoIndex--;
            updateLightbox();
        }
    }

    function updateLightbox() {
        if (!lightboxImage) return;

        const photo = photos[currentPhotoIndex];
        const src = typeof photo.src === 'string' ? photo.src : photo.src.src;
        
        lightboxImage.src = src;
        lightboxImage.alt = photo.alt;

        if (lightboxCaption) {
            lightboxCaption.textContent = photo.caption || "";
        }

        if (currentIndex) {
            currentIndex.textContent = currentPhotoIndex + 1;
        }

        updateNavigationButtons();
    }

    function updateNavigationButtons() {
        const prevBtn = lightbox?.querySelector(".prev-btn");
        const nextBtn = lightbox?.querySelector(".next-btn");

        if (prevBtn) prevBtn.disabled = currentPhotoIndex === 0;
        if (nextBtn) nextBtn.disabled = currentPhotoIndex === totalPhotos - 1;
    }

    function handleKeydown(event) {
        if (!lightbox || lightbox.hasAttribute("hidden")) {
            return;
        }

        switch (event.key) {
            case "Escape":
                closeLightbox();
                event.preventDefault();
                break;
            case "ArrowLeft":
                previousPhoto();
                event.preventDefault();
                break;
            case "ArrowRight":
                nextPhoto();
                event.preventDefault();
                break;
        }
    }

    function handlePhotoItemClick(event) {
        const photoItem = event.target.closest(".photo-item");
        if (!photoItem) return;

        const index = parseInt(photoItem.dataset.photoIndex, 10);
        openLightbox(index);
    }

    function handleLightboxBackdropClick(event) {
        if (event.target.classList.contains("lightbox-backdrop")) {
            closeLightbox();
        }
    }

    function handlePhotoItemKeydown(event) {
        const photoItem = event.target.closest(".photo-item");
        if (!photoItem) return;

        if (event.key === "Enter" || event.key === " ") {
            event.preventDefault();
            const index = parseInt(photoItem.dataset.photoIndex, 10);
            openLightbox(index);
        }
    }

    // Initialize
    document.addEventListener("DOMContentLoaded", () => {
        const gallery = document.querySelector(".photo-gallery");
        if (gallery) {
            gallery.addEventListener("click", handlePhotoItemClick);
            gallery.addEventListener("keydown", handlePhotoItemKeydown);
        }

        if (lightbox) {
            lightbox.addEventListener("click", handleLightboxBackdropClick);
            
            lightbox.querySelector(".close-btn")?.addEventListener("click", closeLightbox);
            lightbox.querySelector(".prev-btn")?.addEventListener("click", previousPhoto);
            lightbox.querySelector(".next-btn")?.addEventListener("click", nextPhoto);
        }

        document.addEventListener("keydown", handleKeydown);
    });
</script>
