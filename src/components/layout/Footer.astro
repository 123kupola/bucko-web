---
import { contactInfo } from '../../utils/siteConfig';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const quickLinks = [
    { href: lang === 'sl' ? '/' : `/${lang}/`, label: t('nav.home') },
    { href: lang === 'sl' ? '/#about' : `/${lang}/#about`, label: t('nav.about') },
    { href: lang === 'sl' ? '/gallery' : `/${lang}/gallery`, label: t('nav.gallery') },
    { href: lang === 'sl' ? '/blog' : `/${lang}/blog`, label: t('nav.blog') },
];
---

<footer class="site-footer">
    <div class="footer-content">
        <div class="footer-section">
            <h3 class="footer-title">{t('footer.contact')}</h3>
            <div class="contact-links">
                <a
                    href={`mailto:${contactInfo.email}`}
                    class="contact-link"
                    aria-label="Send email to Bucko"
                >
                    <span class="contact-icon">üìß</span>
                    <span>{contactInfo.email}</span>
                </a>
                <a
                    href={contactInfo.facebook}
                    class="contact-link"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Visit Bucko's Facebook page"
                >
                    <span class="contact-icon">üìò</span>
                    <span>Facebook</span>
                </a>
                <a
                    href={contactInfo.twitter}
                    class="contact-link"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Visit Bucko's Twitter/X page"
                >
                    <span class="contact-icon">üê¶</span>
                    <span>Twitter/X</span>
                </a>
            </div>
        </div>

        <div class="footer-section">
            <h3 class="footer-title">{t('footer.quick_links')}</h3>
            <ul class="footer-links">
                {quickLinks.map(link => (
                    <li>
                        <a href={link.href} class="footer-link">
                            {link.label}
                        </a>
                    </li>
                ))}
            </ul>
        </div>

        <div class="footer-section">
            <h3 class="footer-title">{t('footer.about')}</h3>
            <p class="footer-description">
                {t('footer.description')}
            </p>
        </div>
    </div>

    <div class="footer-bottom">
        <p>
            &copy; {currentYear} Valerija & Buƒçko. {t('footer.rights')}
            <span class="heart">‚ù§Ô∏è</span> {t('footer.made_with')}
        </p>
    </div>
</footer>

<style>
    .site-footer {
        background: var(--color-secondary);
        color: white;
        margin-top: var(--spacing-4xl);
    }

    .footer-content {
        max-width: var(--container-xl);
        margin: 0 auto;
        padding: var(--spacing-3xl) var(--spacing-lg);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: var(--spacing-2xl);
    }

    .footer-section h3 {
        margin: 0 0 var(--spacing-lg) 0;
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        color: white;
    }

    .contact-links {
        display: flex;
        flex-direction: column;
        gap: var(--spacing-md);
    }

    .contact-link {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
        color: white;
        text-decoration: none;
        transition: transform var(--transition-fast);
        padding: var(--spacing-sm);
        border-radius: var(--radius-md);
    }

    .contact-link:hover {
        transform: translateX(var(--spacing-md));
        background: rgba(255, 255, 255, 0.1);
    }

    .contact-link:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
    }

    .contact-icon {
        font-size: var(--font-size-xl);
        flex-shrink: 0;
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: var(--spacing-sm);
    }

    .quick-link-item {
        margin-bottom: var(--spacing-xs);
    }

    .footer-link {
        color: white;
        text-decoration: none;
        padding: var(--spacing-sm) 0;
        transition: color var(--transition-fast), transform var(--transition-fast);
        display: inline-block;
    }

    .footer-link:hover {
        color: var(--color-accent);
        transform: translateX(var(--spacing-sm));
    }

    .footer-link:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
        border-radius: var(--radius-sm);
    }

    .footer-description {
        color: rgba(255, 255, 255, 0.85);
        line-height: var(--line-height-relaxed);
        margin: 0;
    }

    .footer-bottom {
        background: rgba(0, 0, 0, 0.2);
        padding: var(--spacing-xl) var(--spacing-lg);
        text-align: center;
    }

    .footer-bottom p {
        margin: 0;
        opacity: 0.9;
        font-size: var(--font-size-sm);
    }

    .heart {
        display: inline-block;
        animation: heartbeat 1.5s ease-in-out infinite;
    }

    @keyframes heartbeat {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
    }

    @media (max-width: var(--breakpoint-md)) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: var(--spacing-xl);
            padding: var(--spacing-2xl) var(--spacing-lg);
        }
    }

    @media (max-width: var(--breakpoint-sm)) {
        .footer-content {
            padding: var(--spacing-xl) var(--spacing-md);
        }
    }
</style>
