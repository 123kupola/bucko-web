---
interface Props {
    featuredCount: number;
    totalCount: number;
}

const { featuredCount, totalCount } = Astro.props;

const stats = [
    {
        number: featuredCount,
        label: 'Carefully Selected Photos',
        icon: 'üì∏',
    },
    {
        number: totalCount,
        label: 'Total Photos Available',
        icon: 'üñºÔ∏è',
    },
    {
        number: '100%',
        label: 'Pure Buƒçko Joy',
        icon: '‚ù§Ô∏è',
    },
];
---

<section class="collection-stats">
    <div class="stats-container">
        <h2 class="stats-title">About This Photo Collection</h2>
        <div class="stats-grid" role="list">
            {stats.map((stat, index) => (
                <article class="stat-card" role="listitem">
                    <div class="stat-icon" aria-hidden="true">
                        {stat.icon}
                    </div>
                    <span class="stat-number">{stat.number}</span>
                    <span class="stat-label">{stat.label}</span>
                </article>
            ))}
        </div>
        <p class="stats-description">
            This gallery showcases a curated selection of {featuredCount} best moments, captured over time. Each photo tells a unique story of personality, adventures, and the special bond we share. From playful park adventures to quiet cuddle moments, these images represent the full spectrum of life with this amazing dog.
        </p>
    </div>
</section>

<style>
    .collection-stats {
        margin-bottom: var(--spacing-4xl);
    }

    .stats-container {
        background: var(--color-bg-alt);
        border-radius: var(--radius-2xl);
        padding: var(--spacing-3xl) var(--spacing-xl);
        box-shadow: var(--shadow-lg);
        max-width: var(--container-xl);
        margin: 0 auto;
        text-align: center;
    }

    .stats-title {
        font-size: var(--font-size-4xl);
        color: var(--color-primary);
        margin-bottom: var(--spacing-xl);
        font-weight: var(--font-weight-bold);
        line-height: var(--line-height-tight);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--spacing-xl);
        margin-bottom: var(--spacing-2xl);
    }

    .stat-card {
        background: linear-gradient(
            135deg,
            var(--color-accent),
            var(--color-accent-dark)
        );
        color: white;
        padding: var(--spacing-xl);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        transition: transform var(--transition-base), box-shadow var(--transition-base);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .stat-card:hover {
        transform: translateY(calc(var(--spacing-sm) * -1));
        box-shadow: var(--shadow-xl);
    }

    .stat-card:focus-visible {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
    }

    .stat-icon {
        font-size: var(--font-size-2xl);
        margin-bottom: var(--spacing-xs);
    }

    .stat-number {
        display: block;
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-extrabold);
        line-height: 1;
        margin-bottom: var(--spacing-xs);
    }

    .stat-label {
        font-size: var(--font-size-base);
        opacity: 0.95;
        font-weight: var(--font-weight-medium);
    }

    .stats-description {
        font-size: var(--font-size-lg);
        color: var(--color-text-light);
        max-width: 800px;
        margin: 0 auto;
        line-height: var(--line-height-relaxed);
    }

    @media (max-width: var(--breakpoint-md)) {
        .stats-container {
            padding: var(--spacing-2xl) var(--spacing-lg);
        }

        .stats-title {
            font-size: var(--font-size-3xl);
        }

        .stats-grid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: var(--spacing-lg);
        }

        .stat-card {
            padding: var(--spacing-lg);
        }

        .stat-number {
            font-size: var(--font-size-3xl);
        }

        .stats-description {
            font-size: var(--font-size-base);
        }
    }

    @media (max-width: var(--breakpoint-sm)) {
        .stats-grid {
            grid-template-columns: 1fr;
            gap: var(--spacing-md);
        }

        .stat-card {
            padding: var(--spacing-md);
        }

        .stat-number {
            font-size: var(--font-size-2xl);
        }

        .stat-icon {
            font-size: var(--font-size-xl);
        }

        .stats-description {
            font-size: var(--font-size-sm);
        }
    }
</style>
