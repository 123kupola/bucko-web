---
import Layout from "../layouts/Layout.astro";
import { dogInfo } from "../data/dog";
import { featuredPhotos, allPhotos } from "../data/photos";
import Hero from "../components/sections/Hero.astro";
import DogInfo from "../components/DogInfo.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
import FunFacts from "../components/sections/FunFacts.astro";
import MemoryLane from "../components/sections/MemoryLane.astro";
import CollectionStats from "../components/sections/CollectionStats.astro";
import BlogSection from "../components/sections/Blog.astro";

const pageTitle = `Spoznajte ${dogInfo.name}a - ${dogInfo.nickname}jeva ƒçudovita zbirka fotografij`;
const pageDescription = `Odkrijte ƒçudoviti svet ${dogInfo.name}a (${dogInfo.nickname}s), ${dogInfo.age} starega ${dogInfo.breed}a, ujetega v teh neverjetnih fotografijah. Oglejte si ${featuredPhotos.length} skrbno izbranih trenutkov!`;
---

<Layout title={pageTitle} description={pageDescription}>
    <Hero dogInfo={dogInfo} photoCount={featuredPhotos.length} />

    <section id="about" class="section">
        <DogInfo
            name={dogInfo.name}
            nickname={dogInfo.nickname}
            breed={dogInfo.breed}
            age={dogInfo.age}
            personality={dogInfo.personality}
            favoriteThings={dogInfo.favoriteThings}
            photoUrl={dogInfo.photoUrl}
            birthDate={dogInfo.birthDate}
        />
    </section>

    <section id="gallery" class="section">
        <PhotoGallery
            photos={featuredPhotos}
            title={`${dogInfo.name}jeva galerija fotografij`}
        />
        <div class="gallery-cta">
            <a href="/gallery" class="view-all-button">
                <span>Poglej vseh {allPhotos.length} fotografij</span>
                <span class="icon">üì∏</span>
            </a>
        </div>
    </section>

    <FunFacts dogName={dogInfo.name} />
    <MemoryLane dogInfo={dogInfo} />
    <CollectionStats featuredCount={featuredPhotos.length} totalCount={86} />

    <BlogSection limit={3} />
</Layout>

<style>
    .section {
        scroll-margin-top: calc(var(--spacing-4xl) + var(--spacing-lg));
    }

    .gallery-cta {
        display: flex;
        justify-content: center;
        margin-top: var(--spacing-2xl);
    }

    .view-all-button {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-sm);
        padding: var(--spacing-md) var(--spacing-2xl);
        background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
        color: white;
        text-decoration: none;
        border-radius: var(--radius-full);
        font-weight: var(--font-weight-bold);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 4px 15px rgba(139, 69, 19, 0.3);
    }

    .view-all-button:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 8px 25px rgba(139, 69, 19, 0.4);
        background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    }

    .view-all-button .icon {
        font-size: 1.25rem;
    }
</style>
