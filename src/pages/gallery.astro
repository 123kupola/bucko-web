---
import Layout from "../layouts/Layout.astro";
import { dogInfo } from "../data/dog";
import { allPhotos } from "../data/photos";
import PhotoGallery from "../components/PhotoGallery.astro";

const pageTitle = `${dogInfo.name}'s Full Photo Collection - ${allPhotos.length} Photos`;
const pageDescription = `Browse the complete collection of ${allPhotos.length} photos of ${dogInfo.name} (${dogInfo.nickname}). From park adventures to lazy afternoons, see all the precious moments captured!`;
---

<Layout title={pageTitle} description={pageDescription}>
    <main class="gallery-page">
        <header class="gallery-header">
            <div class="container gallery-header-content">
                <h1 class="page-title">Full Photo Collection</h1>
                <p class="page-subtitle">
                    Enjoying every moment with {dogInfo.name}.
                </p>
            </div>
        </header>

        <section class="gallery-section">
            <PhotoGallery
                photos={allPhotos}
                title="Memories Captured"
            />
        </section>

        <section class="cta-section">
            <div class="container">
                <a href="/#blog" class="btn btn-primary">Read Buƒçko's Blog</a>
            </div>
        </section>
    </main>
</Layout>

<style>
    .gallery-page {
        padding-top: calc(var(--spacing-4xl) + var(--spacing-lg));
    }

    .gallery-header {
        background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
        color: white;
        padding: var(--spacing-3xl) 0;
        text-align: center;
        margin-bottom: var(--spacing-3xl);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--spacing-lg);
    }

    .gallery-header-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .page-title {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-extrabold);
        margin-bottom: var(--spacing-sm);
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .page-subtitle {
        font-size: var(--font-size-lg);
        opacity: 0.9;
    }

    .gallery-section {
        margin-bottom: var(--spacing-4xl);
    }

    .cta-section {
        text-align: center;
        padding: var(--spacing-4xl) 0;
        background: #f8f9fa;
    }

    .btn {
        display: inline-block;
        padding: var(--spacing-md) var(--spacing-2xl);
        border-radius: var(--radius-full);
        font-weight: var(--font-weight-bold);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: var(--color-primary);
        color: white;
        box-shadow: 0 4px 14px rgba(var(--color-primary-rgb, 52, 152, 219), 0.4);
    }

    .btn-primary:hover {
        background: var(--color-primary-dark);
        transform: translateY(-2px);
    }
</style>
